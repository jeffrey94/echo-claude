# Echo Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION_ID=your_openai_org_id_optional

# LiveKit Configuration
NEXT_PUBLIC_LIVEKIT_WS_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_for_sessions
NEXTAUTH_URL=http://localhost:3000

# Privacy & Security
DIFFERENTIAL_PRIVACY_EPSILON=1.0
ENCRYPTION_SECRET=your_encryption_secret_32_chars_min

# Development & Debug
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# Optional: Third-party Integrations
SENTRY_DSN=your_sentry_dsn_optional
VERCEL_URL=your_vercel_deployment_url

# Database (if using external Postgres instead of Supabase)
# DATABASE_URL=postgresql://user:password@localhost:5432/echo_db

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_optional
VERCEL_ANALYTICS_ID=your_vercel_analytics_id_optional